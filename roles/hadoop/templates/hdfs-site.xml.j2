<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
 <property>
    <name>dfs.replication</name>
    <value>{{ hadoop_replication_number }}</value>
  </property>
{%if inventory_hostname in groups['hadoop-master'] %}
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:{{ hadoop_namenode }}</value>
  </property>
{% else %}
  <property>
    <name>dfs.datanode.name.dir</name>
    <value>file:{{ hadoop_datanode }}</value>
  </property>
{% endif %}
</configuration>
